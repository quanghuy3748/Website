            <i class="visit"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.SoNguoiDangOnline</h3>
            <p>Online</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>

