
@{
    ViewBag.Title = "Demo";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<link href="~/Content/css/styledangnhap.css" rel="stylesheet" />

<div style="height:500px">
    <br />
    <input type="button" value="Đăng Nhập" id="btnDangNhap" class="btn btn-primary" />
    @*Tạo div chứa div login*@
    <div id="popup_login">
        <div class="login-form">
            <div style="clear:both; text-align:right;margin-bottom:0;">
                <span id="close-form" class="btn btn-primary">X</span>
            </div>
            <h2 style="color:aquamarine">Đăng Nhập</h2>
            <div class="form-info">
                <form>
                    <input type="text" class="email TaiKhoan" placeholder="Tên đăng nhập" required="">
                    <input type="password" class="password MatKhau" placeholder="Mật khẩu" required="">
                    <p><a href="#">Quên mật khẩu ?</a></p>
                    <ul class="login-buttons">
                        <li><input type="submit" value="Đăng Nhập" id="btnDangNhap1"></li>
                        <li><a href="#" class="hvr-sweep-to-left">Đăng Ký</a></li>
                      
                    </ul>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    #btnDangNhap {
        float: left;
    }
    .content {
        height: 500px;
    }
    #close-form {
        color: white;
    }
    #login-form {
        background: #3a3a46;
        cursor: pointer;
    }
    #popup_login {
        position: fixed;
        top:0;
        left:0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        z-index: 99;
        display: none;
    }
</style>

<script type="text/javascript">
    //Hiển thị popup login
    $("#btnDangNhap").click(function () {
        $("#popup_login").show();
    });
    //Ẩn form
    $("#close-form").click(AnForm);

    
    //Định nghĩa funtion ẩn form
    function AnForm() {
        $("#popup_login").hide();
    }
    //Lấy giá trị
    $("#btnDangNhap1").click(function () {
        var TaiKhoan = $(".TaiKhoan").val();
        var MatKhau = $(".MatKhau").val();

        //alert("Tài Khoản" + TaiKhoan + "\n Mật Khẩu " + MatKhau);

        if (TaiKhoan == "") {
            alert("Lỗi");
            return;
        }
    });
    
   
</script>